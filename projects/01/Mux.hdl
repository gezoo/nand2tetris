/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    And(a=b,b=sel,out=x);
    Not(in=sel,out=y);
    And(a=a,b=y,out=z);
    Or(a=z,b=x,out=out);
}